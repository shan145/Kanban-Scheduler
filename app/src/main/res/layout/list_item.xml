<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id = "@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:strokeColor="#000000"
        card_view:strokeWidth="0.5dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task"
                android:padding="4dp"
                style="@style/task_descriptor" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_below="@id/task"
                android:id="@+id/calendar"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    card_view:srcCompat="@drawable/ic_calendar"
                    android:contentDescription="calendar picture" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Tue 04 Aug"
                    android:fontFamily="@font/montserrat"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    card_view:srcCompat="@drawable/ic_clock"
                    android:contentDescription="clock picture"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="4:30 pm"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="Groceries include: \n-Paper\n-Toiletry\n-Fun stuff\n-Cheese\n-Lots of L's"
                android:padding="4dp"
                android:layout_below="@id/calendar"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>