<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id = "@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:strokeColor="#000000"
        card_view:strokeWidth="0.5dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:id="@+id/time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task"
                android:layout_width="320dp"
                android:padding="4dp"
                style="@style/task_descriptor" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hold_functions"
                android:layout_toRightOf="@id/task"
                android:layout_toEndOf="@id/task"
                android:padding="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_button"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@string/edit_button"
                    card_view:srcCompat="@drawable/ic_edit_button" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_button"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@string/delete_button"
                    android:clickable="true"
                    card_view:srcCompat="@drawable/ic_delete_button"
                    android:focusable="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_below="@id/task"
                android:id="@+id/calendar"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/calendar_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    card_view:srcCompat="@drawable/ic_calendar"
                    android:contentDescription="@string/calendar_picture" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="@font/montserrat"/>
                <ImageView
                    android:id="@+id/clock_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    card_view:srcCompat="@drawable/ic_clock"
                    android:contentDescription="@string/clock_picture"
                    android:paddingEnd="1dp"
                    android:paddingStart="20dp" />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendar"
                    android:id="@+id/description"
                    android:padding="4dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>