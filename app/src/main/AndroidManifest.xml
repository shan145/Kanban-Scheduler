<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kanbanscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kanban_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kanban_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.DashboardActivity"/>
        <activity android:name=".activities.TaskFillActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".activities.ResetActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".activities.HomeActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login Activity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:label="Register Activity"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity android:name=".activities.MainActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>